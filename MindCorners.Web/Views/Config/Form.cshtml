@model MindCorners.Common.Model.Config
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Config Create/Edit";
}

<div class="container">
    <div class="form-group">
        @Html.Partial("Form/_FormHeader")
    </div>
    @using (Html.BeginForm(Model.Id != Guid.Empty ? "EditApplication" : "CreateApplication", "Config", new { id = Model.Id }, FormMethod.Post, new { id = "ApplicationForm" }))
    {

        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Type)
            @Html.DropDownListFor(model => model.Type, new SelectList(ViewBag.Types, "Key", "Value", Model.Type), string.Empty, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.FriendlyName)
            @Html.TextBoxFor(model => model.FriendlyName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Value)
            @Html.TextBoxFor(model => model.Value, new { @class = "form-control" })
        </div>
    }
</div>
